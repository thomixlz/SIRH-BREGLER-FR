{% extends 'base.html.twig' %}

{% block title %}Info{% endblock %}

{% block body %}
    <h1>Info</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ info.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ info.message }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ info.date ? info.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
